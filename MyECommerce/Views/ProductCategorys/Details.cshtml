@model MyECommerce.ViewModels.CategoryFormViewModel

@{
    ViewBag.Title = "ProductCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<table class="table table-bordered" id="products">
    <thead>
        <tr>
            <th>Products</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@Html.ActionLink(product.Name, "Details", "Products", new { id = product.Id }, null)</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#products").dataTable();

        });
    </script>
}